material Portal/GreatFalls
{
	receive_shadows off
	technique
	{
		pass
		{
			lighting off
			scene_blend add
			//depth_write off

			texture_unit
			{
				texture portalGreatFalls.png
				env_map spherical
				rotate_anim 0.1
			}
		}
		pass
		{
			lighting off
			scene_blend modulate
			//depth_write off

			texture_unit
			{
				texture portalGreatFalls.png
				env_map spherical
				rotate_anim 0.1
			}
		}
	}
}